<a href="/dashboard"><button type="button" name="home_button">Home</button></a>
<a href="/questions/new"><button type="button" name="sell_button">Ask Something!</button></a>
<a href="/logout"><button type="button" name="logout_button">Logout</button></a>

<h1>Ask a new question</h1>

<% if @question && !@question.errors.empty? %>
  <% @question.errors.full_messages.each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<form action="/questions/<%= @question.id %>" method="post">
  <input type='hidden' name="_method" value="put">
  <textarea name="question[body]" rows="5" cols="30"><%= @question.body %></textarea>
  <input type="submit" value="Ask!">
</form>
